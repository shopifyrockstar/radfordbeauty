<div class="our-story">
    <div class="container">
        <div class="text-container">
            <h2>{{section.settings.section_title}}</h2>
            <p>{{section.settings.section_paragraph}}</p>

            <div class="story-button">
                <a href="pages/about-us-1">{{section.settings.button_text}}</a>
            </div>

        </div>
        <div class="img-container">
            <img src="{{section.settings.user_img | img_url: 'master'}}" alt="">

        </div>
    </div>
</div>





